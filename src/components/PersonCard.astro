---
import ImageWrapper from "./misc/ImageWrapper.astro";

interface Props {
  person: {
    name: string;
    photo?: string;
    role: string;
    url?: string;
  };
}

const { person } = Astro.props;
---

{
  person.url ? (
    <a href={person.url} class="group hover:cursor-pointer flex flex-col gap-3">
      {person.photo && (
        <ImageWrapper
          src={person.photo}
          basePath={"content/people/images"}
          alt="Preview"
          class="object-cover"
        />
      )}
      <div class="flex flex-col items-center text-center">
        <h3 class="text-md font-medium group-hover:underline">{person.name}</h3>
        {person.role && (
          <p class="text-sm text-black/50 dark:text-white/50">{person.role}</p>
        )}
      </div>
    </a>
  ) : (
    <div class="group flex flex-col gap-3">
      {person.photo && (
        <ImageWrapper
          src={person.photo}
          basePath={"content/people/images"}
          alt="Preview"
          class="object-cover"
        />
      )}
      <div class="flex flex-col items-center text-center">
        <h3 class="text-md font-medium">{person.name}</h3>
        {person.role && (
          <p class="text-sm text-black/50 dark:text-white/50">{person.role}</p>
        )}
      </div>
    </div>
  )
}
