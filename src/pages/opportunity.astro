    <div
      class="mx-auto prose dark:prose-invert !max-w-[75ch] text-black/80 dark:text-white/80 [&_a]:text-blue-800 dark:[&_a]:text-blue-300 [&_hr]:my-2"
    >
      <Content />
    </div>
